<ui:UiBinder xmlns:ui='urn:ui:com.google.gwt.uibinder'
             xmlns:gwt='urn:import:com.google.gwt.user.client.ui'>

    <ui:with type="com.gwtApp.client.login.LoginResources" field="res"/>

    <gwt:HTMLPanel>
        <div align="center">
            <gwt:VerticalPanel styleName="{res.style.blackText}">
                <gwt:HTMLPanel>
                <table>
                    <tr>
                <td> <gwt:Label text="Login" styleName="{res.style.blackText}" /> </td>
                      <td>  <gwt:TextBox ui:field="loginBox" styleName="{res.style.box}"/> </td>
                    </tr>
                    <tr>
                <td> <gwt:Label text="Password" styleName="{res.style.blackText}" /> </td>
                <td> <gwt:PasswordTextBox ui:field="passwordBox" styleName="{res.style.box}"/> </td>
                    </tr>
                    <tr>
                        <td> </td>
                        <td><gwt:Button ui:field="buttonSubmit" text="Войти"
                                        styleName="{res.style.loginButton}" /> </td>
                            </tr>
                </table>
                </gwt:HTMLPanel>

                <gwt:Label ui:field="completionLabel1"
                           styleName="{res.style.blackText}" />
                <gwt:Label ui:field="completionLabel2"
                           styleName="{res.style.blackText}" />
            </gwt:VerticalPanel>
        </div>
    </gwt:HTMLPanel>
</ui:UiBinder>